<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet author="keycloak" id="16.0.0-KEYCLOAK-8955-IDX_USER_REALM_SACL_NON_MSSQL">
        <preConditions onFail="MARK_RAN" onSqlOutput="TEST">
            <dbms type="!mssql"/> <!-- mssql uses an filtered index, see changeSet below -->
        </preConditions>
        <createIndex  tableName="USER_ENTITY" indexName="IDX_USER_REALM_SACL">
            <column name="REALM_ID" type="VARCHAR(36)"/>
            <column name="SERVICE_ACCOUNT_CLIENT_LINK" type="VARCHAR(255)"/>
        </createIndex>
    </changeSet>
    
    <changeSet author="keycloak" id="16.0.0-KEYCLOAK-8955-IDX_USER_REALM_SACL_MSSQL">
        <!-- this is the mssql specific code, for other databases see changeSet above -->
        <!-- use filtered index on mssql, since SERVICE_ACCOUNT_CLIENT_LINK is expected to be NULL for most entries -->
        <sql dbms="mssql" 
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">
                CREATE NONCLUSTERED INDEX IDX_USER_REALM_SACL 
                    ON USER_ENTITY(REALM_ID, SERVICE_ACCOUNT_CLIENT_LINK) 
                    WHERE SERVICE_ACCOUNT_CLIENT_LINK IS NOT NULL
        </sql>
    </changeSet>

    <changeSet author="keycloak" id="16.0.0-KEYCLOAK-8955-IDX_ADMIN_EVENT_TIME">
        <!-- improve loading time of admin event list -->
        <createIndex tableName="ADMIN_EVENT_ENTITY" indexName="IDX_ADMIN_EVENT_TIME">
            <column name="ADMIN_EVENT_TIME" type="DESC"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
