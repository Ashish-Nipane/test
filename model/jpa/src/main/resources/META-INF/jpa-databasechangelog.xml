<!-- Must be run before any other changelog -->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">
    <!-- Liquibase version built internally can have quite a long version i.e 3.8.6.temporary-redhat-00002,
        which violates the original column type varchar(20) -->
    <changeSet author="keycloak" id="liquibase_column_type">
        <preConditions onSqlOutput="TEST" onFail="MARK_RAN">
            <not>
                <changeSetExecuted id="liquibase_column_type" author="keycloak" changeLogFile="META-INF/jpa-databasechangelog.xml"/>
            </not>
        </preConditions>

        <modifyDataType columnName="LIQUIBASE" newDataType="varchar(40)" tableName="DATABASECHANGELOG"/>
    </changeSet>
</databaseChangeLog>
