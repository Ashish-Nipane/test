    <changeSet author="slawomir@dabek.name" id="2.5.0-duplicate-email-support">
        <addColumn tableName="REALM">
            <column name="LOGIN_WITH_EMAIL_ALLOWED" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="DUPLICATE_EMAILS_ALLOWED" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addDefaultValue columnDataType="BOOLEAN"
            columnName="LOGIN_WITH_EMAIL_ALLOWED"
            defaultValueBoolean="true"
            tableName="REALM"/>
        <addDefaultValue columnDataType="BOOLEAN"
            columnName="DUPLICATE_EMAILS_ALLOWED"
            defaultValueBoolean="false"
            tableName="REALM"/>
    </changeSet>

    <changeSet author="hmlnarik@redhat.com" id="2.5.0-unique-group-names">
        <preConditions onSqlOutput="TEST" onFail="MARK_RAN">
