{
	"attributes": [
		{
			"name": "username",
			"displayName": "${username}",
			"validations": {
				"length": { "min": 3, "max": 255 },
				"pattern": {"pattern": "^[^<>&\"'\\s\\v\\h$%!#?,;:*~/\\\\|^=\\[\\]{}`\\p{Cntrl}]+$"}
			}
		},
		{
			"name": "email",
			"displayName": "${email}",
			"validations": {
				"length": { "min": 1, "max": 255 }
			}
		},
		{
			"name": "firstName",
			"displayName": "${firstName}",
	        "required": {"roles" : ["user"]},
			"permissions": {
				"view": ["admin", "user"],
				"edit": ["admin", "user"]
			},
			"validations": {
				"length": { "min": 1, "max": 255 },
				"pattern": {"pattern": "^[^<>&\"\\s\\v\\h$%!#?,;:*~/\\\\|^=\\[\\]{}`\\p{Cntrl}]+$"}
			}
		},
		{
			"name": "lastName",
			"displayName": "${lastName}",
	        "required": {"roles" : ["user"]},
			"permissions": {
				"view": ["admin", "user"],
				"edit": ["admin", "user"]
			},
			"validations": {
				"length": { "min": 1, "max": 255 },
				"pattern": {"pattern": "^[^<>&\"\\s\\v\\h$%!#?,;:*~/\\\\|^=\\[\\]{}`\\p{Cntrl}]+$"}
			}
		}
	]
}